<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox minHeight="500" minWidth="800" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.viqbgrg.tvbox.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox spacing="10">
        <Button>1</Button>
        <Button>2</Button>
        <Button>3</Button>
    </HBox>
    <ScrollPane prefHeight="439.0" prefViewportWidth="200" prefWidth="760.0">
        <TilePane fx:id="tilePane" prefColumns="3">
            <children>
                <StackPane>
                    <Label fx:id="label" text="这是第一张图片" />
                    <ImageView fx:id="image">
                        <image>
                            <Image url="https://img9.doubanio.com/view/photo/l/public/p2892024245.jpeg"/>
<!--                            <Image url="https://img.alicdn.com/imgextra/i1/O1CN01rGJZac1Zn37NL70IT_!!6000000003238-2-tps-230-180.png"/>-->
                        </image>
                    </ImageView>
                </StackPane>
            </children>
        </TilePane>
    </ScrollPane>
</VBox>
